# List of valid properties:
#
# align
# color
# command
# full_text
# instance
# interval
# label
# min_width
# name
# separator
# separator_block_width
# short_text
# signal
# urgent

# Global properties
separator_block_width=15

[radio]
command=radio title
interval=5
signal=11
markup=pango

[volume]
#label=ðŸ”ˆ
label=ðŸ”‰
instance=Master
command=/usr/share/i3blocks/volume 2% hw:1
