#!/bin/bash

# force english layout
setxkbmap -layout us

music pause-if-playing &

# commands to run on screen lock
locklog lock &
slackstatus away &


#xscreensaver-command -l
i3lock -n -c '000000'

setxkbmap -layout us,ru


# commands to run on screen unlock
locklog unlock
when > /dev/null

slackstatus auto

